message = ("\nHello! What is your age?:")
message += ("\ntype 'quit' to quit. ")
active  = True

while active:
        age = input(message)

        if age != "quit":
            age = int(age)

            if age < 3:
                print("\nYour ticket is free.")
            elif age <= 12:
                print("\nYour ticket is $10.")
            else:
                print("\nYour ticket is $15.")
        else:
             break

    
